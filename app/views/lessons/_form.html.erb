<%= simple_form_for(@lesson) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :subject, required: true %>
      <%= f.input :descrpition, as: :wysihtml5, wysihtml5: {'toolbar': {'color': true}} %>
      <%= f.input :system, collection: system_categories, label: "Choose system", required: true %>
      <%= f.input :pdf, label: "Add your attachament" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>

